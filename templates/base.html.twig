<!DOCTYPE html>
<html lang="en">
    <head>
        <title>{% block pagetitle %}XtractPDF{% endblock %}</title>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">

        {% block base_headers %}
        <meta name='author' content='Casey McLaughlin' />
        <meta name='description' content='Convert scholarly PDFs to JATS-XML' />
        <meta name='keywords' content='PDF, TXT, JATS, XML, Portable Document Format, Convert PDF, PDF to XML, Extract PDF' />

        <link href="{{ base_url }}/assets/bootstrap/css/bootstrap.css" type="text/css" rel="stylesheet" />
        <link href="{{ base_url }}/assets/bootstrap/css/bootstrap-responsive.css" type="text/css" rel="stylesheet" />
        <link href="{{ base_url }}/assets/fontawesome/css/font-awesome.min.css" type="text/css" rel="stylesheet" />
        <link href="{{ base_url }}/assets/prettify-bs.css" type="text/css" rel="stylesheet" />
        <link href="{{ base_url }}/assets/main.css" type="text/css" rel="stylesheet">
        {% endblock %}

        {% block page_headers %}
        {% endblock %}
    </head>
    <body class='{{ page_class | default('normal') }}'>
        
        {% block page_sidebar %}
            {% include 'p_sidebar.html.twig' %}
        {% endblock %}

        {% block page_content %}
        {% endblock %}
 
        {% block base_js %}

            {# Jquery #}
            <script src="//ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
            <script>window.jQuery || document.write('<script src="js/vendor/jquery-1.9.0.min.js"><\/script>')</script>
            <script src='//code.jquery.com/ui/1.10.3/jquery-ui.min.js'></script>

            {# Bootstrap #}
            <script type='text/javascript' src='{{ base_url }}/assets/bootstrap/js/bootstrap.min.js'></script>

            {# Addons #}
            <script type='text/javascript' src='{{ base_url }}/assets/jquery-form.js'></script>
            <script type='text/javascript' src='{{ base_url }}/assets/jquery-autosize.js'></script>
            <script type='text/javascript' src='{{ base_url }}/assets/prettify/prettify.js'></script>

            {# App Scripts #}
            <script type='text/javascript' src='{{ base_url }}/assets/main.js'></script>
        {% endblock %}
        
        {% block page_js %}
        {% endblock %}
    </body>
</html>